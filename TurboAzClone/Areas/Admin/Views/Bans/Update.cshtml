@model BanUpdateDto
@{
    ViewData["Title"] = "Yenilə";
}


<h1>Ban növünü yenilə</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="postDto.Name" class="control-label">Adı</label>
                <input asp-for="postDto.Name" class="form-control" value="@Model.getDto.Name" />
                <span asp-validation-for="postDto.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="@Model.postDto.formFile">Şəkil yüklə</label>
                <input type="file" class="form-control" asp-for="@Model.postDto.formFile" />
                <span asp-validation-for="@Model.postDto.formFile" class="text-danger"></span>
            </div>
            <input hidden asp-for="getDto.Id" />
            <input hidden asp-for="getDto.Image" />
            <div class="form-group">
                <input type="submit" value="Yadda saxla" class="btn btn-warning text-light" />
                <a asp-action="Index" class="btn btn-outline-danger">Imtina</a>
            </div>
        </form>
    </div>
    <div class="col-md-2 ms-2 mt-3" >
        <img style="height:10rem" width="100%" src="~/assets/images/ban-images/@Model.getDto.Image" class="rounded"/>
    </div>
</div>


