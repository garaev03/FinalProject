@model List<EngineCapacityGetDto>

@{
    ViewData["Title"] = "Mühərrrik Həcmləri";
}

<h1>Mühərrrik Həcmləri</h1>

<p>
    <a asp-action="Create" class="btn btn-success text-light">Yeni həcm əlavə et</a>
</p>
<table class="table" style="vertical-align:middle">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th class="text-center">
                Həcm
            </th>
            <th>
                Tənzimlənmələr
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Value) sm<sup>3</sup>
                </td>
                <td>
                    <div>
                        <a asp-action="update" asp-route-id="@item.Id">
                            <i class="fa-regular fa-pen-to-square btn btn-warning me-3"></i>
                        </a>
                        <a asp-action="delete" asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash-can btn btn-danger text-light"></i>
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>

