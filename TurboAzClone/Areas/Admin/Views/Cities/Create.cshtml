@model CityPostDto

@{
    ViewData["Title"] = "Yeni Şəhər";
}

<h1>Yeni şəhər əlavə et</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label">>Şəhər kodu</label>
                <input asp-for="Code" class="form-control" min="1"/>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Əlavə et" class="btn btn-success text-light" />
                <a asp-action="Index" class="btn btn-outline-danger">Imtina</a>
            </div>
        </form>
    </div>
</div>