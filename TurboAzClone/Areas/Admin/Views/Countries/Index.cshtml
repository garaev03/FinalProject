@model List<CountryGetDto>

@{
    ViewData["Title"] = "Ölkələr";
}

<h1>Ölkələr</h1>

<p>
    <a asp-action="Create" class="btn btn-success text-light">Yeni Ölkə əlavə et</a>
</p>
<table class="table" style="vertical-align:middle">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th class="text-center">
                Şəkil
            </th>
            <th class="text-center">
                Adı
            </th>
            <th>
                Tənzimlənmələr
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="100">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td width="150">
                    <img style="height:100px" width="100%" src="~/assets/images/country-images/@item.Image" class="p-1 rounded-circle" />
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div>
                        <a asp-action="Update" asp-route-id="@item.Id">
                            <i class="fa-regular fa-pen-to-square btn btn-warning me-3"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash-can btn btn-danger text-light"></i>
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>