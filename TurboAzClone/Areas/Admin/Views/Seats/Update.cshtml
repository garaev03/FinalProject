@model SeatUpdateDto
@{
    ViewData["Title"] = "Yenilə";
}


<h1>Oturacaq sayını yenilə</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="postDto.Value" class="control-label">Sayı</label>
                <input asp-for="postDto.Value" class="form-control" value="@Model.getDto.Value" />
                <span asp-validation-for="postDto.Value" class="text-danger"></span>
            </div>
            <input hidden asp-for="getDto.Id" />
            <div class="form-group">
                <input type="submit" value="Yadda saxla" class="btn btn-warning text-light" />
                <a asp-action="index" class="btn btn-outline-danger">Imtina</a>
            </div>
        </form>
    </div>
</div>