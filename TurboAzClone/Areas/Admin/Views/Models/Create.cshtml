@model ModelPostDto

@{
    ViewData["Title"] = "Yeni Model";
}

<h1>Yeni model əlavə et</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="MakeId" class="form-select">
                    <option value="-1">Seç</option>
                    @foreach (var item in ViewBag.Makes)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <br />
                <span asp-validation-for="MakeId" class="text-danger mt-3"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Əlavə et" class="btn btn-success text-light" />
                <a asp-action="Index" class="btn btn-outline-danger">Imtina</a>
            </div>
        </form>
    </div>
</div>